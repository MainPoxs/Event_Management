<Page x:Class="EventManagement.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventManagement.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Регистрация пользователя" HorizontalAlignment="Center" FontSize="14">
    <StackPanel DataContext="{DynamicResource eventManagement}" Orientation="Vertical"
        HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
    <TextBlock Text="Имя" Style="{StaticResource MainTextBlock}"/>
    <TextBox Text="{Binding Path=User.FirstName}"/>
    <TextBlock Text="Фамилия" Style="{StaticResource MainTextBlock}"/>
    <TextBox Text="{Binding Path=User.LastName}"/>
    <TextBlock Text="Логин" Style="{StaticResource MainTextBlock}"/>
    <TextBox Text="{Binding Path=User.Login}"/>
    <TextBlock Text="Пароль" Style="{StaticResource MainTextBlock}"/>
    <TextBox Text="{Binding Path=User.Password}"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button Grid.Row="3" Grid.Column="1" Width="200" Content="Зарегистрироваться"
            Command="{Binding AddNewVisitor}"/>
    </StackPanel>
    </StackPanel>
</Page>
