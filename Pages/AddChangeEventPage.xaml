<Page x:Class="EventManagement.Pages.AddChangeEventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventManagement.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="900" MinHeight="800" MinWidth="900"
      Title="Добавление/изменение события">   
   
    <StackPanel DataContext="{DynamicResource eventManagement}" Orientation="Horizontal"
                VerticalAlignment="Center" HorizontalAlignment="Center" Background="White">        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Width="350">
            <TextBlock Text="Название" Style="{StaticResource MainTextBlock}"/>
            <TextBox Text="{Binding Event_.EventName, UpdateSourceTrigger=PropertyChanged}"
                     Background="#ECECEC"/>
            <TextBlock Text="Дата" Style="{StaticResource MainTextBlock}"/>
            <DatePicker SelectedDate="{Binding Event_.Date, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Время" Style="{StaticResource MainTextBlock}"/>
            <TextBox Text="{Binding Event_.Time, StringFormat={}{0:HH:mm}, 
                UpdateSourceTrigger=PropertyChanged}"
                         Background="#ECECEC"/>
            <TextBlock Text="Место проведения" Style="{StaticResource MainTextBlock}"/>
            <TextBox Text="{Binding Event_.EventLocation, UpdateSourceTrigger=PropertyChanged}"
                     Background="#ECECEC"/>
            <TextBlock Text="Описание мероприятия" Style="{StaticResource MainTextBlock}"/>
            <TextBox Text="{Binding Event_.Description, UpdateSourceTrigger=PropertyChanged}"
                     Background="#ECECEC" Height="100" TextWrapping="Wrap"/>                     
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="100" Content="Добавить"
                Command="{Binding AddNewEvent}"/>               
                <Button Width="100" Content="Сохранить"                    
                Command="{Binding SaveUserEvent}"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Width="300" Height="330">
            <StackPanel Background="#ECECEC" HorizontalAlignment="Center"
                   VerticalAlignment="Center" Width="200" Height="200" Margin="30,30,30,60">
                <Image Source="{Binding BitmapImage}" Stretch="Uniform"/>
            </StackPanel>
            <Button Content="Загрузить картинку" Command="{Binding Download}"
                    Width="150"/>
        </StackPanel>
    </StackPanel>
</Page>
