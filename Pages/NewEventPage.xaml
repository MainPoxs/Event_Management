<Page x:Class="EventManagement.Pages.NewEventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventManagement.Pages"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Создание мероприятия">  
    <Grid DataContext="{DynamicResource eventManagement}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>          
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Events}" SelectedItem="{Binding Event_}"
                  IsReadOnly="True" AutoGenerateColumns="False" SelectionMode="Single"
                  CanUserSortColumns="False" Background="White" VerticalScrollBarVisibility="Visible"
                  RowHeight="50">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Фото">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImageEvent}" Stretch="Uniform"
                                   MaxWidth="70" MaxHeight="70"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Название" Binding="{Binding Path=EventName}" Width="*"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Path=Date,
                    StringFormat={}{0:d.M.yyy}}" Width="*"/>
                <DataGridTextColumn Header="Время" Binding="{Binding Path=Time,
                    StringFormat={}{0:HH:mm}}" Width="*"/>
                <DataGridTextColumn Header="Место проведения" Binding="{Binding Path=EventLocation}"
                                    Width="*"/>
                <DataGridTextColumn Header="Описание мероприятия" Binding="{Binding Path=Description}"
                                    Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>                                                      
                        </Style>                        
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Организатор мероприятия"
                                    Binding="{Binding Path=User.FullName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>      
        <StackPanel Grid.Row="2" Grid.ColumnSpan="4" Orientation="Horizontal"
                    HorizontalAlignment="Center" Height="50">
            <Button Grid.Row="2" Grid.Column="1" Width="100" Content="Добавить"
                Click="AddEventButton_Click"/>
            <Button Grid.Row="2" Grid.Column="2" Width="100" Content="Изменить"
                Click="ChangeButton_Click"/>
            <Button Grid.Row="2" Grid.Column="3" Width="100" Content="Удалить"                    
                Command="{Binding DeleteEvent}" CommandParameter="{Binding Event_}"/>
            <Button Grid.Row="2" Grid.Column="3" Width="100" Content="Детали"
                    Click="DataGrid_OpenDetails"/>
        </StackPanel>        
    </Grid>
</Page>
