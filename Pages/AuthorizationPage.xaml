<Page x:Class="EventManagement.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventManagement.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800" Title="Вход">
    <Page.Resources>
        <Style TargetType="Button" x:Key="btnStyle">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#F78888"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid DataContext="{DynamicResource eventManagement}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Width="300">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Background="Transparent" Text="Авторизация " FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <TextBlock Text="/" VerticalAlignment="Center"/>
                <Button Style="{StaticResource btnStyle}" Background="Transparent"
                        Content="Регистрация" Click="Button_Reg" FontWeight="Bold"
                        BorderThickness="0"/>
            </StackPanel>
            <TextBlock Text="Login" Style="{StaticResource SimpleTextBlock}"/>
            <TextBox x:Name="loginTextBox" Text="{Binding User.Login}"/>
            <TextBlock Text="Пароль" Style="{StaticResource SimpleTextBlock}"/>
            <TextBox x:Name="passwordTextBox" Text="{Binding User.Password}"/>            
            <Button Content="Войти" Click="Button_Enter"/>
        </StackPanel>
    </Grid>
</Page>
