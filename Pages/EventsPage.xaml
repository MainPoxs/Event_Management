<Page x:Class="EventManagement.Pages.EventsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventManagement.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Подборки событий">
    <Page.Resources>
        <Style TargetType="Button" x:Key="redBtn">
            <Style.Setters>
                <Setter Property="Width" Value="35"/>                
                <Setter Property="Height" Value="35"/>                
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Width" Value="50"/>
                    <Setter Property="Height" Value="50"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
   
    <StackPanel DataContext="{DynamicResource eventManagement}" Orientation="Vertical"
                Background="White">
        <ListBox ItemsSource="{Binding Events}" SelectedItem="{Binding Event_}"
                 BorderBrush="Transparent"
                 Margin="100,10" Height="auto" HorizontalAlignment="Center">            
            <ListBox.ItemTemplate>
                <DataTemplate>                    
                    <Border Margin="5" BorderBrush="#8590AA" BorderThickness="2" CornerRadius="20"
                            Background="#ECECEC" Width="500">
                        <Grid Margin="3" MouseDown="Grid_MouseDownDetails">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.RowSpan="4" Width="75" Height="100" Margin="6" Source="{Binding ImageEvent}"
                                   Stretch="Uniform"/>
                            <TextBlock Grid.Column="1" Text="{Binding Date, ConverterCulture='ru-RU',
                              StringFormat={}{0:dd MMMM, dddd}}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Time, StringFormat={}{0:HH:mm}}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" FontWeight="Bold" Text="{Binding EventName}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding EventLocation}"/>
                            <Button Grid.RowSpan="4" Grid.Column="2" Style="{StaticResource redBtn}"
                                    BorderBrush="Transparent" 
                                    Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListBox}},
                                Path=DataContext.AddComment}" CommandParameter="{Binding}">                               
                                    <Image Source="/Resources/comment.png"/>                              
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>            
        </ListBox>        
    </StackPanel>
</Page>
