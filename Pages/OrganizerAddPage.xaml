<Page x:Class="EventManagement.OrganizerAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление организаторов">
    <StackPanel DataContext="{DynamicResource eventManagement}" Orientation="Vertical" Background="#ECECEC"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" MinHeight="350">
        <TextBlock Text="Имя" Style="{StaticResource MainTextBlock}"/>
        <TextBox Text="{Binding User.FirstName, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Фамилия" Style="{StaticResource MainTextBlock}"/>
        <TextBox Text="{Binding User.LastName, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Логин" Style="{StaticResource MainTextBlock}"/>
        <TextBox Text="{Binding User.Login, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Пароль" Style="{StaticResource MainTextBlock}"/>
        <TextBox Text="{Binding User.Password, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Роль" Style="{StaticResource MainTextBlock}"/>
        <ComboBox ItemsSource="{Binding Roles}" SelectedItem="{Binding Role}" 
                  DisplayMemberPath="TitleRole" Background="White"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Width="100" Content="Добавить"
                    Command="{Binding AddNewUser}"/>            
            <Button Width="100" Content="Сохранить"                    
                    Command="{Binding SaveUserEvent}"/>
        </StackPanel>
    </StackPanel>
</Page>
